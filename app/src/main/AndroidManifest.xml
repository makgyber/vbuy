<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.makgyber.vbuys">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SellerMainActivity"
            android:theme="@style/SellerTheme">

        </activity>
        <!-- <activity android:name=".UpdateProfileActivity"> -->
        <!-- <meta-data -->
        <!-- android:name="android.support.PARENT_ACTIVITY" -->
        <!-- android:value=".ProfileActivity" /> -->
        <!-- </activity> -->
        <!-- <activity android:name=".ProfileActivity"> -->
        <!-- <meta-data -->
        <!-- android:name="android.support.PARENT_ACTIVITY" -->
        <!-- android:value=".activities.MainActivity" /> -->
        <!-- </activity> -->
        <activity
            android:name=".activities.SignInActivity"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.InventoryDetailActivity"
            android:theme="@style/SellerTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.InventoryActivity" />
        </activity>
        <activity android:name=".activities.InventoryActivity"
            android:theme="@style/SellerTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.StoreSetupActivity" />
        </activity>
        <activity android:name=".activities.StoreSetupActivity"
            android:theme="@style/SellerTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SellerMainActivity" />
        </activity>


        <activity android:name=".activities.ProductDetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SearchableActivity" />
        </activity>
        <activity
            android:name=".activities.SearchableActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".activities.MainActivity">
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".activities.SearchableActivity" />
        </activity>
    </application>

</manifest>