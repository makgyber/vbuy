<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


        <TextView
            android:id="@+id/text_view_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Welcome ..."
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/iv_services"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_pan_tool_lavender_48dp"
            app:layout_constraintRight_toLeftOf="@+id/iv_food"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_welcome" />

        <ImageView
            android:id="@+id/iv_food"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="76dp"
            android:foregroundGravity="center_horizontal"
            android:src="@drawable/ic_local_dining_lavender_48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_services"
            app:layout_constraintTop_toBottomOf="@+id/text_view_welcome" />

        <ImageView
            android:id="@+id/iv_health"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_local_hospital_lavender_48dp"
            app:layout_constraintRight_toLeftOf="@+id/iv_realty"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_services" />

        <ImageView
            android:id="@+id/iv_realty"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="76dp"
            android:foregroundGravity="center_horizontal"
            android:src="@drawable/ic_home_lavender_48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_services"
            app:layout_constraintTop_toBottomOf="@+id/iv_food" />


</androidx.constraintlayout.widget.ConstraintLayout>