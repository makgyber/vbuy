<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:backgroundTint="@color/colorPrimaryDarkSeller">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>

        <TextView
            android:id="@+id/tv_tindahan_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:text="My Store 1"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_centerVertical="false"
            android:textSize="16sp"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_below="@+id/tv_tindahan_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFFFF"
            android:layout_margin="2dp">


        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableTop="@drawable/ic_settings_primary_24dp"
            android:text="Settings"
            android:textAlignment="center"
            android:clickable="true"
            />


        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_inventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableTop="@drawable/ic_inventory_primary_24dp"
            android:text="Inventory"
            android:textAlignment="center"
            android:clickable="true"
            />

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_invoices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableTop="@drawable/ic_invoice_reddish_24dp"
            android:text="Invoices"
            android:textAlignment="center"
            android:clickable="true"
            />

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_messages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableTop="@drawable/ic_chat_reddish_24dp"
            android:text="Messages"
            android:textAlignment="center"
            android:clickable="true"
            />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>